<!DOCTYPE html>
<html>
  <head>
    <title>Mod2Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body style="background-color:orange;">
  <nav class="navbar navbar-expand-lg navbar-dark">

  <!-- Navbar brand -->
  <a class="navbar-brand" href="/login">Login</a>

  <!-- Collapse button -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
    aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- Collapsible content -->
  <div class="collapse navbar-collapse" id="basicExampleNav">

    <!-- Links -->
    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <a class="nav-link" href="/units/generals">Generals</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/units/infantries">Infantry</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/units/cavalries">Mounted</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/units/missiles">Missiles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/units/artilleries">Artillery</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/units/gallery">Gallery</a>
      </li>

      <li class="nav-item-logout">
        <a class="nav-link" href="/login">Logout
          <span class="sr-only">(current)</span>
        </a>
      </li>
    
  </div>
  <!-- Collapsible content -->

</nav>

    
    <div class = "container">
    <% if flash[:errors] %>
        <%= flash[:errors] %>
      <% end %>
      <%= yield %>
    </div>

  
    <footer>
        <div class = "footer">
          <%= image_tag('logos/rome_logo.png') %>
          <%= image_tag('logos/carthage_logo.png') %>
          <%= image_tag('logos/arverni_logo.png') %>
          <%= image_tag('logos/seleucid_logo.png') %>
          <%= image_tag('logos/spartan_logo.png') %>

        </div>
    </footer>
    
  </body>
</html>
