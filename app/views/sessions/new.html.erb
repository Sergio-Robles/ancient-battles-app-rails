
<h1>Login</h1>
<%= form_with(url: "/login", method: :post) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <%= f.label :password %>
    <%= f.password_field :password%>
    <%= f.submit value: "Login"%>
<% end %>

<% if @current_user %>
  <%= link_to 'Logout', logout_path %>
<% else %>
<%= link_to 'Login', login_path %>
<% end %>

